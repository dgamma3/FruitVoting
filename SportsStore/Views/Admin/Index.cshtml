@model AdminViewModel
@{
    ViewBag.Title = "All Products";
    Layout = "_AdminLayout";
}
Hello @Model.user.UserName
@if (@Model.user.Product != null)
{
    <p>You previously voted for @Model.user.Product.Name</p>
}
else
{
    <p>please vote on a selection of fruit</p>


}
@if (Model.products.Count() == 0)
{

    <div class="text-center m-2">
        <form asp-action="SeedDatabase" method="post">
            <button type="submit" class="btn btn-danger">Seed Database</button>
        </form>
    </div>

}
else
{
    <form asp-action="Add" method="post">

   
        <select name="ProductID">
            @foreach (var item in Model.products)
            {
                <option  value="@item.ProductID">@item.Name</option>

            }
          
        </select>

            <button type="submit" class="btn btn-danger btn-sm">
                Submit
            </button>
    </form>

}
